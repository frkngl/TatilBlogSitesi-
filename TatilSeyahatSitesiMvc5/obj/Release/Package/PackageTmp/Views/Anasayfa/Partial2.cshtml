@using TatilSeyahatSitesiMvc5.Models
@model List<TBLBLOG>
<style>
        #kutucuk {
            box-shadow: 1px 1px 40px 20px white;
                                     
        }
</style>
    <div style="margin-top:50px;margin-bottom:-20px; text-align:center;"><h3>BLOGLARIM</h3></div>
    <div style="margin-bottom:50px; display: flex;  justify-content: center;" id="responsivee">
        @foreach (var x in Model)
        {
            <a style="text-decoration:none;" href="~/Blog/BlogDetayy/@x.ID">
                <div id="kutucuk" class="card-group m-5 ">
                    <div style="width: 300px;" class="card bg-transparent border-0 ">
                        <img style="width:350px; height:150px;" src="~/IMG/@x.BlogImage" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 style="color: #a2365a;" class="card-title">@x.Baslik.Substring(0, 20)</h5>
                            <p style="color: #a2365a;" class="card-text">@x.Aciklama.Substring(0, 50)</p>
                            <p style="color: #a2365a;" class="card-text"><small class="text-body-secondary">@x.Tarih.Value.ToString("dd.MM.yyyy")</small></p>
                        </div>
                    </div>
                </div>
            </a>
        }
        <div class="clear"></div>
    </div>
