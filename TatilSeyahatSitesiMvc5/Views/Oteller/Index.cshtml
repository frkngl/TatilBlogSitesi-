    <link href='http://fonts.googleapis.com/css?family=Oswald:100,400,300,700' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,300italic' rel='stylesheet' type='text/css'>
    <!----//webfonts---->
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <!--end slider -->
    <!--script-->
    <script type="text/javascript" src="~/web2/js/move-top.js"></script>
    <script type="text/javascript" src="~/web2/js/easing.js"></script>
    <!--/script-->
    <!---->

</head>
<body style="background-image:url(../IMG/resim.png); background-position:center; background-attachment:fixed; background-repeat:no-repeat;background-size:cover;">

    <!--/header-->
    <div class="content">
        <div class="container">
            <div class="content-grids">
                <div class="col-md-8 content-main">
                    <div class="content-grid">
                        <div class="content-grid-info">
                            @foreach (var x in Model.oteller)
                            {
                                <img style="width:640px;height:427px;" src="~/IMG/@x.OtellerImage" alt="" />
                                <div class="post-info">
                                    <h4><a href="/Oteller/OtelDetay/@x.ID">@Html.Raw(x.Baslik)</a>  @x.Tarih.Value.ToString("dd.MM.yyyy") / 27 Comments</h4>
                                    <p>@Html.Raw(x.Aciklama.Substring(0,200))</p>
                                    <a href="/Oteller/OtelDetay/@x.ID"><span></span>DAHA FAZLA OKU</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-md-4 content-right">
                    <div class="recent">
                        <h3>Son Oteller</h3>
                        <ul>
                            @foreach (var y in Model.oteller2)
                            {
                                <li><a href="/Oteller/OtelDetay/@y.ID">@Html.Raw(y.Baslik)</a></li>
                            }


                        </ul>
                    </div>
                    <div class="comments">
                        <h3>Son Yorumlar</h3>
                        <ul>
                            @foreach (var a in Model.otelyorumlar)
                            {
                                <li>@a.KullaniciAdi on <a href="/Oteller/OtelDetay/@a.OTELID">@a.Yorum</a></li>
                            }
                        </ul>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <!---->
</body>
</html>

