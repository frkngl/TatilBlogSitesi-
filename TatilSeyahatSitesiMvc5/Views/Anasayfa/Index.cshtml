<style>
    .populer {
        list-style-type: none;
        display: inline-flex;
        flex-direction: column;
        width: 300px;
    }

        .populer .populers {
            border: 0.1px solid black;
            height: 40px;
            justify-content: center;
            display: flex;
            align-items: center;
            margin: 2px;
            border-radius: 10px;
            font-size: 13px;
            font-weight: 500;
        }

            .populer .populers:hover {
                background-color: white;
                color: black;
                transition: 0.5s;
            }

   
    .padding .box2-left .otelcik:hover {
        box-shadow: 1px 1px 40px 20px white
    }
    .rehber{
    display: flex;
    justify-content: space-evenly;
}
   
.rehber .box{
    width: 301px;
    border-radius: 8px;
    margin-bottom:20px;
}
    .rehber .box:hover {
        box-shadow: 1px 1px 10px 10px white;
    }
.rehber .box .boxs{
    display: flex;
    
}
.rehber .box .boxs p{
    margin-left: 0.5rem;
    margin-top:0.5rem;
    font-size:12px;
    font-weight:600;
}

</style>
