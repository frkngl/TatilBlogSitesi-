@model TatilSeyahatSitesiMvc5.Models.TBLYORUMLAR
<div class="content-form">
    <h3>Bir Yorum Bırakın</h3>
    <form method="post">
        <input type="hidden" placeholder="ID" name="BLOGID" value="@ViewBag.deger" required />
        <input type="text" placeholder="Kullanıcı Adı" name="KullaniciAdi" required />
        <input type="text" placeholder="Mail" name="Mail" required />
        <textarea placeholder="Mesaj Yazın" name="Yorum"></textarea>
        <input type="submit" value="Gönder" />
    </form>
</div>