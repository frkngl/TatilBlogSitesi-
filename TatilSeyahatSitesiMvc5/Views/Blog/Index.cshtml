@model TatilSeyahatSitesiMvc5.Models.BlogYorum
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AnasayfaLayout.cshtml";
}


<!DOCTYPE HTML>
<html>
<head>
   
    <link href="~/web2/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <link href="~/web2/css/style1.css" rel='stylesheet' type='text/css' />
    
   
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!----webfonts---->
    <link href='http://fonts.googleapis.com/css?family=Oswald:100,400,300,700' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,300italic' rel='stylesheet' type='text/css'>
    <!----//webfonts---->
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <!--end slider -->
    <!--script-->
    <script type="text/javascript" src="~/web2/js/move-top.js"></script>
    <script type="text/javascript" src="~/web2/js/easing.js"></script>
    <!--/script-->
    
    <!---->

</head>
<body>

    <!--/header-->
    <div class="content">
        <div class="container">
            <div class="content-grids">
                <div class="col-md-8 content-main">
                    <div class="content-grid">
                        <div class="content-grid-info">
                            @foreach (var x in Model.bloglar)
                            {
                                <img style="width:640px;height:427px;" src="~/IMG/@x.BlogImage" alt="" />
                                <div class="post-info">
                                    <h4><a href="/Blog/BlogDetay/@x.ID">@Html.Raw(x.Baslik)</a>  @x.Tarih.Value.ToString("dd.MM.yyyy") / 27 Comments</h4>
                                    <p>@Html.Raw(x.Aciklama.Substring(0, 200))</p>
                                    <a href="/Blog/BlogDetay/@x.ID"><span></span>DAHA FAZLA OKU</a>
                                </div>
                               
                            }
                        </div>
                    </div>
                </div>
                <div class="col-md-4 content-right">
                    <div class="recent">
                        <h3>Son Bloglar</h3>
                        <ul>
                            @foreach (var y in Model.bloglar2)
                            {
                                <li><a href="/Blog/BlogDetay/@y.ID">@Html.Raw(y.Baslik)</a></li>
                            }


                        </ul>
                    </div>
                    <div class="comments">
                        <h3>Son Yorumlar</h3>
                        <ul>
                            @foreach (var x in Model.yorumlar2)
                            {
                                <li>@x.KullaniciAdi on <a href="/Blog/BlogDetay/@x.BLOGID">@x.Yorum</a></li>
                            }
                        </ul>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <!---->
    </body>
</html>



