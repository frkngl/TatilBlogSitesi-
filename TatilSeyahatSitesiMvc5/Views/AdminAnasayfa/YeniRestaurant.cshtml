@model TatilSeyahatSitesiMvc5.Models.TBLRESTAURANT 
@{
    ViewBag.Title = "YeniRestaurant";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>

<h2 style="display:flex; justify-content:center;">Yeni Restaurant Ekleme</h2>
<br />
@using (Html.BeginForm("YeniRestaurant", "AdminAnasayfa", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <form class="form-group d-flex flex-column ">
        <div style="margin:0px 20px 0px 20px;">
            @Html.LabelFor(x => x.Baslik, new { @style = "margin-top:5px;   font-size:20px;" })
            @Html.TextBoxFor(x => x.Baslik, new { @style = "width:100%; height:30px;" })
        </div>
        <br />
        <div style="margin:0px 20px 0px 20px;">
            @Html.LabelFor(x => x.RestaurantImage, new { @style = "margin-top:5px;   font-size:20px;" })

            <input class="form-control"
                   id="resim"
                   type="file"
                   onchange="$('.resim')[0].src = window.URL.createObjectURL(this.files[0])"
                   name="BlogImage"
                   required />
            <br />
            <img class="resim"
                 width="250"
                 height="200"
                 style="border:1px solid red;" />

        </div>
        <br />
        <div style="margin:0px 20px 0px 20px;">
            @Html.LabelFor(x => x.Aciklama, new { @style = "margin-top:5px;   font-size:20px;" })
            @Html.TextAreaFor(x => x.Aciklama, 15, 5, new { @class = "form-control", id = "summernote", required = "required" })
        </div>
        <div style="margin:10px 0px 0px 20px;">
            <button class="btn btn-primary">Kaydet</button>
        </div>

    </form>
}




<script>
    $('#summernote').summernote({
        placeholder: 'Açıklamanızı buraya yazınız',
        tabsize: 2,
        height: 100,
        toolbar: [
            ['style', ['style']],
            ['font', ['bold', 'underline', 'clear']],
            ['color', ['color']],
            ['para', ['ul', 'ol', 'paragraph']],
            ['table', ['table']],
            ['insert', ['link', 'picture', 'video']],
            ['view', ['fullscreen', 'codeview', 'help']]
        ]
    });
</script>



